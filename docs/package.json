{
  "name": "markdown-to-mintlify",
  "version": "1.0.0",
  "description": "Convert markdown files to Mintlify-compatible MDX with image processing",
  "main": "dist/scripts/convert-to-mintlify.js",
  "scripts": {
    "convert": "ts-node scripts/convert-to-mintlify.ts",
    "convert:watch": "ts-node-dev --respawn scripts/convert-to-mintlify.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "prepare": "husky install",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "markdown",
    "mintlify",
    "documentation",
    "converter",
    "mdx"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.3.1",
    "js-yaml": "^4.1.0",
    "openai": "^4.20.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 